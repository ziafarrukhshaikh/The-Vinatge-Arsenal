<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr> 
            <th>Product ID %></th>
            <th>Jersey</th>
            <th>Scarf</th>
            <th>Hat</th>
            <th>Bobblehead</th>
            <th>Posters</th>
        </tr>
    <% allrecs.forEach((recref, index) => { %>
        <tr>
        <td><%= recref.product_id %></td>
        <td><%= recref.jersey %></td>
        <td><%= recref.scarf %></td>
        <td><%= recref.hat %></td>
        <td><%= recref.bobblehead %></td>
        <td><%= recref.posters %></td>
        <td><a href='/ProductType/<%= recref.product_id %>/show'> Details</a></td>
        </tr>
    <% }); %>
    </table>
    <% } else { %>
            <p>No Records Available</p>
    <% } %>
