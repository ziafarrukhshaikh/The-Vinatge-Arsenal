<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr> 
            <th>Product ID %></th>
            <th>Jersey</th>
            <th>Scarf</th>
            <th>Hat</th>
            <th>Bobblehead</th>
            <th>Posters</th>
            <th>Homepage</th>
            <th>Price</th>
        </tr>
    <% allrecs.forEach((recref, index) => { %>
        <tr>
        <td><%= recref.product_id %></td>
        <td><%= recref.jersey %></td>
        <td><%= recref.scarf %></td>
        <td><%= recref.hat %></td>
        <td><%= recref.bobblehead %></td>
        <td><%= recref.posters %></td>
        <td><%= recref.homepage %></td>
        <td><%= recref.price %></td>
        <td><a href='/ProductType/<%= recref.product_id %>/show'> Details</a></td>
        <td><a href='/ProductType/<%= recref.product_id %>/edit'> Edit</a></td>
        <td><a href='/ProductType/<%= recref.product_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
    <% }); %>
    </table>
    <% } else { %>
            <p>Not Records Available</p>
    <% } %>

    <p> <a href= '/ProductType/addrecord'> Add new</a> </p>