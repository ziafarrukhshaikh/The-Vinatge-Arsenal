<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr> 
            <th>Rewards ID %></th>
            <th>Customer ID</th>
        </tr>
    <% allrecs.forEach((recref, index) => { %>
        <tr>
        <td><%= recref.rewards_id %></td>
        <td><%= recref.customer_id %></td>
        <td><a href='/Rewards/<%= recref.rewards_id %>/show'> Details</a></td>
        <td><a href='/Rewards/<%= recref.rewards_id %>/edit'> Edit</a></td>
        <td><a href='/Rewards/<%= recref.rewards_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
    <% }); %>
    </table>
    <% } else { %>
            <p>No Records Available</p>
    <% } %>

    <p> <a href= '/Rewards/addrecord'> Add new</a> </p>