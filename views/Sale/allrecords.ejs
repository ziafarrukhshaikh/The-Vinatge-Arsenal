<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>Sale ID %></th>
            <th>Product ID</th>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name %></th>
            <th>Email</th>
            <th>Sale Price</th>
            <th>Delivery Fee</th>
            <th>Delivery Date</th>
        </tr>
    <% allrecs.forEach((recref, index) => { %>
        <tr>
        <td><%= recref.sale_id %></td>
        <td><%= recref.product_id %></td>
        <td><%= recref.cusomer_id %></td>
        <td><%= recref.firstname %></td>
        <td><%= recref.lastname %></td>
        <td><%= recref.email %></td>
        <td><%= recref.salePrice %></td>
        <td><%= recref.deliveryFee %></td>
        <td><%= recref.deliveryDate %></td>
        <td><a href='/Sale/<%= recref.sale_id %>/show'> Details</a></td>
        <td><a href='/Sale/<%= recref.sale_id %>/edit'> Edit</a></td>
        <td><a href='/Sale/<%= recref.sale_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
    <% }); %>
    </table>
    <% } else { %>
            <p>Not Records Available</p>
    <% } %>

    <p> <a href= '/Sale/addrecord'> Add new</a> </p>